<body>
  <div class="page-header">
    <h1>This is the Console ðŸ–¥</h1>
  </div>

  <div class="meetings-container">
    <input type="button" value="Load meetings" id="get-meetings">
  </div>


  <div class="create-meeting-container">
    <input type="button" value="create meetings" id="create-meeting">
  </div>

  <a href="/auth/logout">Click here to logout</a>


  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script>
    $(() => {

      $("#get-meetings").on("click", function () {
        $.ajax({
          url: "/api/v1/meetings",
          type: "GET",
          success: function (data) {
            console.log(data)
          }
        });
      });

      $("#create-meeting").on("click", function () {
        $.ajax({
          url: "/api/v1/new_meeting",
          type: "POST",
          data: {
            start_time: "2020-03-04 01:07:28", // TODO need to be exact format
            end_time: "2020-03-04 01:07:28", // TODO backend need to check this format
            detail: "Meeting"
          }
        })
      })

    })
  </script>
</body>

</html>